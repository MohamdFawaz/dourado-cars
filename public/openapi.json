{
    "openapi": "3.0.2",
    "info": {
        "title": "Dourdo Cars",
        "description": "This is a documentation for dourdo cars mobile APIs",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://staging.douradocars.com/api/v1"
        },
        {
            "url": "http://localhost:8001/api/v1"
        }
    ],
    "tags": [
        {
            "name": "Car Make",
            "description": "Car brands endpoints"
        },
        {
            "name": "Car",
            "description": "Operations About Cars"
        },
        {
            "name": "Setting",
            "description": "Listing Settings"
        }
    ],
    "paths": {
        "/car-make": {
            "get": {
                "tags": [
                    "Car Make"
                ],
                "summary": "List exsiting car brands",
                "description": "List exsiting car brands",
                "operationId": "index",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarMakeResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/car": {
            "get": {
                "tags": [
                    "Car"
                ],
                "summary": "List exsiting cars",
                "description": "List exsiting car",
                "operationId": "getCars",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "number of elements per page",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": 10
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "page number",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": 1
                        }
                    },
                    {
                        "name": "car_make_ids",
                        "in": "query",
                        "description": "Filter by car make ids",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "number",
                                "example": [
                                    1,
                                    12
                                ]
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarListResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/car/{id}": {
            "get": {
                "tags": [
                    "Car"
                ],
                "summary": "Show car by id",
                "description": "Show car by id",
                "operationId": "getById",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "car id",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarShowResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/car/{id}/recommended": {
            "get": {
                "tags": [
                    "Car"
                ],
                "summary": "List Recommended Cars by Car id",
                "description": "List Recommended Cars by Car id",
                "operationId": "recommended",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "car id",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarListResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/car/compare": {
            "get": {
                "tags": [
                    "Car"
                ],
                "summary": "Compare Cars by Car ids",
                "description": "Compare Cars by Car ids",
                "operationId": "compare",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "text/html": {
                                "example": "<html><body>Compare Car Page</body></html>"
                            }
                        }
                    }
                }
            }
        },
        "/car/panoramic": {
            "get": {
                "tags": [
                    "Car"
                ],
                "summary": "Panoramic Cars",
                "description": "Cars to be displyed in 360 view",
                "operationId": "panoramic",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarListResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/setting": {
            "get": {
                "tags": [
                    "Setting"
                ],
                "summary": "List Settings",
                "description": "List Settings",
                "operationId": "getSettings",
                "parameters": [
                    {
                        "name": "locale",
                        "in": "header",
                        "description": "Paramter to display data according to selected localization",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "en",
                            "enum": [
                                "ar",
                                "en"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SettingListResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiResponse": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "boolean"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "CarMakeResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/ApiResponse"
                    }
                ],
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "allOf": [
                                {
                                    "$ref": "#/components/schemas/CarMake"
                                }
                            ],
                            "properties": {
                                "image": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "CarMake": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "CarListResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/ApiResponse"
                    }
                ],
                "properties": {
                    "total_count": {
                        "type": "number"
                    },
                    "pages": {
                        "type": "number"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Car"
                        }
                    }
                }
            },
            "CarShowResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/ApiResponse"
                    }
                ],
                "properties": {
                    "data": {
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/Car"
                            }
                        ],
                        "properties": {
                            "color": {
                                "type": "string"
                            },
                            "specs": {
                                "type": "string"
                            },
                            "warranty": {
                                "type": "boolean"
                            },
                            "transmission_type": {
                                "type": "string"
                            },
                            "fuel_type": {
                                "type": "string"
                            },
                            "hours_power": {
                                "type": "string"
                            },
                            "images": {
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/CarGellery"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "Car": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "mileage": {
                        "type": "number"
                    },
                    "year": {
                        "type": "string"
                    },
                    "car_make": {
                        "$ref": "#/components/schemas/CarMake"
                    },
                    "body_type": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "number_of_cylinder": {
                        "type": "string"
                    }
                }
            },
            "CarGellery": {
                "type": "object",
                "properties": {
                    "image": {
                        "type": "string"
                    }
                }
            },
            "SettingListResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/ApiResponse"
                    }
                ],
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Setting"
                        }
                    }
                }
            },
            "Setting": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
